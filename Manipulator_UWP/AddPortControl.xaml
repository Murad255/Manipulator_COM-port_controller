    mc:Ignorable="d" Height="39" Width="436">

    <Grid  UseLayoutRounding="False" d:LayoutRounding="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

        <Grid.RowDefinitions>

            <RowDefinition Height="121.801"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="273" />
            <ColumnDefinition Width="9" />
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="White" Grid.Column="0" Grid.ColumnSpan="5" Margin="0,0,0,76"/>
